                <%   } else { %>
                  <a href="/<%=librarydata %>/book/<%=bookid %>/user/<%=userdata %>" class='btn disabled' style='background-color: rgb(252, 193, 134);'>Add to list</a>
                  <% } %>
              </a>
            </div>
            <%   }) %>
            <% } else{ %>
