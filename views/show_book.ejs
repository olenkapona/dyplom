        <div class = "book-info">
            
            <form method="GET">
            <%
            if(bookData.length!=0){
                bookData.forEach(function(data){
            %>
            
            <div class="list-group">
             <a class="list-group-item">
                <h4 class="list-group-item-heading"><%=data.name %></h4>
                <p class="list-group-item-text"><%=data.blurb %></p>
                <%
               if(availability==1){
                %>
